extern int Task(int *array, int *size, int *B);

int main()
{
    int a[5]; // объявлен массив a из 5 элементов
              // объявлен массив a из 5 элементов
    int i = 0;

    // Ввод элементов массива
    for (; i < 5; i++)
    {
        scanf("%d", &a[i]); // &a[i] - адрес i-го элемента массива
    }

    return 0;
}